
@{
    ViewBag.Title = "FishMovie";
}

<!-- Custom styles for this template -->
<link href="~/Content/carousel.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />


@section scripts{
    <style>
        div.background {
            background-image: url('../../Images/jääpeilipysty.jpg');
            border: 2px solid black;
            opacity: 0.8;
            width: 1290px;
            height: 728px;
            text-align: center;
        }

        div.transbox {
            /*margin: 5px;*/
            background-color: #ffffff;
            opacity: 0.6;
            filter: alpha(opacity=60); /* For IE8 and earlier */
            width: 1286px;
            height: 724px;
        }

        div.transbox p {
            margin-top: 5%;
            margin-left: 5%;
            font-weight: bold;
            color: #808080;
            font-size: 74px;
            text-align: center;
        }

        video {
            width: 100%;
            height: auto;
        }
    </style>
}

<body>

    <div class="background">
        <div class="transbox">

            <video autoplay loop muted>
                <source src="~/Images/FishMovie.mp4" type="video/mp4" />
                <source src="~/Images/FishMovie.ogg" type="video/ogg">
                Your browser does not support HTML5 video.
            </video>

            @*<iframe src="~/Images/FishMovie.mp4" width="100%" height="100%" frameborder="0" allowfullscreen style="border:none;" title="Iframe"></iframe>*@
        </div>
    </div>



