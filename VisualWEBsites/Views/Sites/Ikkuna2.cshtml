
@{
    ViewBag.Title = "Ikkuna2";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Tangerine">

@section scripts {
    <script src="~/Scripts/jquery-2.2.4.js"></script>

    @Scripts.Render("~/bundles/jqueryval")
}

@section head{
    <link href="~/Content/Mysite.css" rel="stylesheet" />
    <style>
        body {
            background-color: rgb(232,232,232);
        }

        div.background {
            background-image: url('../../Images/ikkuna3.jpg');
            border: 2px solid black;
            /*height: 2935px;*/
            height: auto;
            width: 100%;
            background-repeat: no-repeat;
            background-size: cover;
        }

        div.transbox {
            background-color: #ffffff;
            opacity: 0.5;
            filter: alpha(opacity=60); /* For IE8 and earlier */
            width: 100%;
            height: 1920px;
        }

        div.transbox2 {
            background-color: #d6d6c2;
            opacity: 0.8;
            filter: alpha(opacity=60); /* For IE8 and earlier */
            width: 100%;
            height: 1920px;
        }

        div.transbox p {
            margin-left: 35%;
            font-weight: bold;
            color: #ffffff;
            font-size: 200px;
            width: 100%;
            height: 1920px;
        }
    </style>
}

<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:0px;margin-top:10px;">

    <!-- WRAPPER
    ================================================== -->
    <div class="wrapper">
        <!--BACKGROUND-->
        <div class="background">
            <div class="transbox">
                <div class="transbox2">
                    <p style="margin-left:250px;margin-top:300px; float:left">
                        TALVI <br />
                        KEVÄT <br />
                        KESÄ<br />
                        SYKSY
                    </p>
                </div>
            </div>
        </div><!-- /.background END -->
    </div><!-- /.wrapper END -->
</div>

<script src="~/Scripts/jquery-2.2.4.min.js"></script>
